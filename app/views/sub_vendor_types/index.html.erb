<section class="section">
  <div class="section-header">
    <h1>Sub Vendor Types</h1>
  </div>

  <div class="section-body">
    <p id="notice"><%= notice %></p>
    
    <div class="card">

      <div class="card-body">
        <div class="d-flex mb-3">
          <%= link_to 'New Sub Vendor Type', new_sub_vendor_type_path, class: "ml-auto btn btn-primary btn-lg" %>
        </div>

        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @sub_vendor_types.each do |sub_vendor_type| %>
              <tr>
                <td><%= sub_vendor_type.name %></td>
                <td><%= link_to 'Show', sub_vendor_type %></td>
                <td><%= link_to 'Edit', edit_sub_vendor_type_path(sub_vendor_type) %></td>
                <td><%= link_to 'Destroy', sub_vendor_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
