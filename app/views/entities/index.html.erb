<section class="section">
  <div class="section-header">
    <h1>Entities</h1>
  </div>

  <div class="section-body">
    <p id="notice"><%= notice %></p>
    
    <div class="card">

      <div class="card-body">
        <div class="d-flex mb-3">
          <%= link_to 'New Entity', new_entity_path, class: "ml-auto btn btn-primary btn-lg" %>
        </div>

        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @entities.each do |entity| %>
              <tr>
                <td><%= entity.name %></td>
                <td><%= link_to 'Show', entity %></td>
                <td><%= link_to 'Edit', edit_entity_path(entity) %></td>
                <td><%= link_to 'Destroy', entity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
