<div class="page-header pt-3 pb-2">
  <h2>Entities</h2>
</div>

<p id="notice"><%= notice %></p>

<div class="d-flex">
  <%= link_to 'New Entity', new_entity_path, class: "btn btn-link ml-auto" %>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entities.each do |entity| %>
      <tr>
        <td><%= entity.name %></td>
        <td><%= link_to 'Show', entity %></td>
        <td><%= link_to 'Edit', edit_entity_path(entity) %></td>
        <td><%= link_to 'Destroy', entity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

