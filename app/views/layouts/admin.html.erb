<!DOCTYPE html>
<html>
  <head>
    <title>HikalVendorConnect</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container my-3 content">
      <div class="row">
        <aside class="col-3">
          <h1 class="logo my-5">Hikal</h1>
          <nav>
            <ul class="ml-0 pl-3 list-unstyled list-group">
              <li class="list-group-item <%= current_page?(departments_path) ? "active" : "" %>">
                <a href="<%= departments_path %>" >Department</a>
              </li>
              
              <li class="list-group-item  <%= current_page?(entities_path) ? "active" : "" %>">
                <a href="<%= entities_path %>">Entities</a>
              </li>
              
              <li class="list-group-item <%= current_page?(vendor_types_path) ? "active" : "" %>">
                <a href="<%= vendor_types_path %>">Vendor Types</a>
              </li>
              
              <li class="list-group-item <%= current_page?(sub_vendor_types_path) ? "active" : "" %>">
                <a href="<%= sub_vendor_types_path %>">Sub Vendor Type</a>
              </li>
              <li class="list-group-item">
                <a href="<%= destroy_user_session_path %>" data-method="delete">Logout</a>
              </li>
            </ul>
          </nav>
        </aside>
        <div class="col-9">
          <div id="main-content">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
