<div class="card login-widget">
  
  <h1 class="logo mb-4">Hikal</h1>
  
  <ul class="nav nav-pills" id="pills-tab" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link <%= params[:tab] == "vendor" ? "" : "active" %>" id="pills-emp-tab" data-toggle="tab" href="#pills-emp" role="tab" aria-controls="pills-emp" aria-selected="true">Employee Login</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link <%= params[:tab] == "vendor" ? "active" : "" %>" id="pills-vendor-tab" data-toggle="tab" href="#pills-vendor" role="tab" aria-controls="pills-vendor" aria-selected="false">Vendor Login</a>
    </li>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade <%= params[:tab] == "vendor" ? "" : "show active" %> pt-4" id="pills-emp" role="tabpanel" aria-labelledby="pills-emp-tab">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
        
        <div class="d-flex mb-3 justify-content-between">
          <%= link_to "Sign up", new_registration_path(resource_name, role: User.roles[:employee]) %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "ml-auto" %><br />
        </div>
        
        <div class="form-group text-center pt-2 mb-0">
          <%= f.hidden_field :role, value: 'employee'%>
          <%= f.submit "Log in", class: "btn btn-primary px-5 p-2 btn-block" %>
        </div>
      <% end %>
    </div>
    <div class="tab-pane fade <%= params[:tab] == "vendor" ? "show active" : "" %> pt-4" id="pills-vendor" role="tabpanel" aria-labelledby="pills-vendor-tab">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
        
        <div class="text-right mb-3">
          <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        </div>

        <div class="form-group text-center pt-2 mb-0">
          <%= f.hidden_field :role, value: 'vendor'%>
          <%= f.submit "Log in", class: "btn btn-primary px-5 p-2 btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>