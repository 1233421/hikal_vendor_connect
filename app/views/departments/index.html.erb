<section class="section">
  <div class="section-header">
    <h1>Departments</h1>
  </div>

  <div class="section-body">
    <p id="notice"><%= notice %></p>
    
    <div class="card">

      <div class="card-body">
        <div class="d-flex mb-3">
          <%= link_to 'New Department', new_department_path, class: "ml-auto btn btn-primary btn-lg" %>
        </div>

        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @departments.each do |department| %>
              <tr>
                <td><%= department.name %></td>
                <td><%= link_to 'Show', department %></td>
                <td><%= link_to 'Edit', edit_department_path(department) %></td>
                <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
